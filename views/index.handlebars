<div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="title">Eat Da Burger!</h1>
                <form class="create-form addBurger">

                    <div class="form-group">
                        <input type="text" id="bu" name="name" placeholder="Enter Burger Name!"><button class="button" type="submit">Add Burger</button>
                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <img id="burgerpng" src="/assets/img/burger.png" alt="">
            </div>
        </div>


        <div class="row row2">
            <div class="col-md-6">
                <h2>Burgers To Eat!</h2>
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li>{{burger_name}}<button class="change-devour" data-id={{id}}>Devour</button></li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <h2>Burgers Devoured!</h2>
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            <li>{{burger_name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>  {{!-- {{if devoured = true}} = {{unless =false}} --}}

